upstream flask {
    server unix:///tmp/upload.sock;
}

server {

	client_max_body_size 1000M;

	root /var/www/diyrot.epss.ucla.edu;

	server_name diyrot.epss.ucla.edu;

	location /bin/ {
		deny all;
	}

	location /return/ {
	}

	location /upload/ {
		include uwsgi_params;
		uwsgi_pass flask;
	}

	location /preview/ {
		include uwsgi_params;
		uwsgi_pass flask;
	}

	location /derot/ {
		include uwsgi_params;
		uwsgi_pass flask;
	}

	location / {
		index index.html;
	}





    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/diyrot.epss.ucla.edu/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/diyrot.epss.ucla.edu/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot



}
server {
    if ($host = diyrot.epss.ucla.edu) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	listen 80;

	server_name diyrot.epss.ucla.edu;
    return 404; # managed by Certbot


}